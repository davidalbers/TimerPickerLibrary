<?xml version="1.0" encoding="utf-8"?>
<!--
    Targets modern phones like Nexus 5x, Galaxy S7
    Tested on Droid Turbo
-->
<resources>
    <!-- Force buttons to be less wide, since they only contain number, they look awkward so big-->
    <dimen name="number_button_width">64dp</dimen>
    <!-- For some reason (and only in landscape)
         you have to force a parent view to a certain width
         or else the dialog will be cut off -->
    <dimen name="number_button_group_width">192dp</dimen>
</resources>